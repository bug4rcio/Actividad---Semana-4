/*
Realizar un programa que nos permita determinar si un alumno tiene una
nota de 0, 1 y 2 necesita reforzamiento 3, 4, Desaprobado, 5,6, 7
Aprobado, 8, 9 Excelente y 10 es Becado. Emplear una estructura
condicional múltiple
*/

package ejercicio.pkg1;

import java.util.Scanner;

public class Ejercicio1 {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner (System.in);
        
        System.out.println("Ingresar nota del alumno: ");
        int nota = sc.nextInt();
        
        switch (nota){
            case 0:
            case 1:
            case 2: System.out.println("Necesita reforzamiento");
            break;
            case 3:
            case 4: System.out.println("Está desaprobado");
            break;
            case 5:
            case 6:
            case 7: System.out.println("Está aprobado");
            break;
            case 8:
            case 9: System.out.println("Excelente");
            break;
            case 10: System.out.println("Es becado");
            break;
            default: System.out.println("Ingresar nota válida");
            break;
        }
    }
}
